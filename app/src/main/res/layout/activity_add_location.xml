<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textback"
    android:orientation="vertical"
    tools:context=".add_location">


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:text="Location Registration"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/location_name"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"


                android:ems="10"
                android:hint=" Location Name"
                android:inputType="textPersonName"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/owner_name"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:ems="10"
                android:hint=" Owner Name"
                android:inputType="text"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:hint=" Address"

                android:inputType="textEmailAddress"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" Pincode"

                android:inputType="number"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />


            <EditText
                android:id="@+id/lati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" Latitude"

                android:inputType="text"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/langi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" langitudde"

                android:inputType="text"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" Area"

                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" Contact Number"

                android:inputType="number"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" Email"

                android:inputType="textEmailAddress"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint=" Password"

                android:inputType="textEmailAddress"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="151dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"

                    android:text=" Enter Keyword for Searching"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="53dp"
                    tools:layout_editor_absoluteY="151dp" />

                <EditText
                    android:id="@+id/key1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint=" Keyword one"

                    android:inputType="textEmailAddress"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/key2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint=" Keyword two"

                    android:inputType="textEmailAddress"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/key3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:hint=" keyword three"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/register_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bbuttonback"

                android:text=" Register"

                />
        </LinearLayout>
    </ScrollView>






</LinearLayout>